# Ansible managed, do not edit!

# Files and directories
music_directory                     "{{ ansible_user_dir }}/Music"
playlist_directory                  "{{ ansible_user_dir }}/.config/mpd/playlists"
db_file                             "{{ ansible_user_dir }}/.config/mpd/database"
log_file                            "{{ ansible_user_dir }}/.config/mpd/log"
pid_file                            "{{ ansible_user_dir }}/.config/mpd/pid"
state_file                          "{{ ansible_user_dir }}/.config/mpd/state"
sticker_file                        "{{ ansible_user_dir }}/.config/mpd/sticker.sql"
follow_inside_symlinks              "yes"
follow_outside_symlinks              "yes"


# General music daemon options
bind_to_address                     "127.0.0.1"
port                                "6600"
gapless_mp3_playback                "yes"
restore_paused                      "yes"
auto_update                         "yes"
auto_update_depth                   "1"

# Audio output
audio_output {
    type                            "pulse"
    name                            "pulse"
}

